scripts=["
    create service user asset-share-commons-oak-index-definition-reader-service

    set ACL on /oak:index
        allow jcr:read for asset-share-commons-oak-index-definition-reader-service
    end


    create path (sling:Folder) /conf/asset-share-commons/settings/wcm(cq:Page)/policies(cq:Page)
    create path (sling:Folder) /conf/asset-share-commons/settings/wcm(cq:Page)/template-types(cq:Page)
    create path (sling:Folder) /conf/asset-share-commons/settings/wcm(cq:Page)/templates(cq:Page)

    # Publish
    set ACL for everyone
        allow jcr:read on /conf/asset-share-commons/settings/wcm/policies
        allow jcr:read on /conf/asset-share-commons/settings/wcm/templates
    end


    set ACL for content-authors
        allow crx:replicate on /conf/asset-share-commons/settings/wcm/policies
        allow crx:replicate on /conf/asset-share-commons/settings/wcm/templates
    end

    set ACL for template-authors
        allow jcr:versionManagement,crx:replicate,rep:write,jcr:lockManagement on /conf/asset-share-commons/settings/wcm/policies
        allow jcr:read on /conf/asset-share-commons/settings/wcm/template-types
        allow jcr:versionManagement,crx:replicate,rep:write,jcr:lockManagement on /conf/asset-share-commons/settings/wcm/templates
    end

    set ACL for version-manager-service
        allow jcr:versionManagement,rep:write on /conf/asset-share-commons/settings/wcm/policies
        allow jcr:versionManagement,rep:write on /conf/asset-share-commons/settings/wcm/templates
    end
"]

